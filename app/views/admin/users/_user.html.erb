<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <% if user.avatar.present? %>
        <%= link_to image_tag(user.avatar, size: Settings.admin.size),
          admin_users_path %>
      <% else %>
        <%= link_to image_tag(Settings.admin.url,
          size: Settings.admin.size), admin_users_path %>
      <% end %>
    </td>
    <td>
      <%= link_to admin_user_path(user),
        method: :delete, data: {confirm: t("admin.messages")} do %>
        <span class="glyphicon glyphicon-trash admin-action"></span>
      <% end %>
    </td>
  </tr>
<% end %>
